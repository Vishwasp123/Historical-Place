<div class="col-lg-12">
  <div class="container">
    <%= link_to "New papular_palace",  new_papular_palace_path, class:"btn btn-primary mb-3" %>
    <div class="row">
      <% @papular_palaces.each do |papular_palace| %>
        <%= link_to papular_palace_path(papular_palace), style: "text-decoration:none; color:black;" do %>
         <div class="col-lg-10 mx-auto">
          <div class="card mb-3"> 
           <% if papular_palace.palace_images.attached? %>
            <%= image_tag papular_palace.palace_images.first, style:"width:100%; max-height:450px;" %>
           <% end %>
           <div class="card-body">
              <h5 class="card-title"><%= papular_palace.name %></h5>
              <p class="card-text">City:<span><%= papular_palace.city %></span></p>
              <p class="card-text">State:<span><%= papular_palace.state %><span></p>
              <%#= link_to "View" , papular_palace, class:"btn btn-primary" %>
              <%#= link_to "Edit", edit_papular_palace_path(papular_palace), class:"btn btn-outline-warning"%>
              <%#= link_to "Delete", papular_palace_path(papular_palace), data: {turbo_method: :delete, turbo_confirm:"are you sure to delete"}, class:"btn btn-outline-primary" %>
           </div>
          </div>
         </div>
        <% end %>
      <% end %>
   </div>
 </div>
</div>