<div class=" col-lg-12 col-md-12">
  <div class="container ">
    <div class="col-lg-12 col-md-12">
      <div class="row justify-content-between  ">
        <div class="col-lg-6 ">
          <h1 class="car-text ">Rent Car In <br>Worldwide</h1>
          <!-- Button trigger modal -->
          <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Booking Car 
          </button>

          <!-- Modal -->
          
         <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                 <h1 class="modal-title fs-5 text-dark" id="exampleModalLabel">Book Car</h1>
                 <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="col-lg-12">
                  <div class="modal-body modal_text">  
                    <%= render 'form', car_rental: @car_rental %>
                  </div>
               </div>
             </div>
            </div>
         </div>
        </div>
        <div class="col-lg-6">
         <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <div class="black-background">
                <%= image_tag('car(5).jpeg', alt: 'Your Image', class: 'custome-img ') %>
              </div>
            </div>
            <div class="carousel-item">
              <%= image_tag('car(1).webp', alt: 'Your Image', class: 'custome-img ') %>
            </div>
            <div class="carousel-item">
              <%= image_tag('car(6).webp', alt: 'Your Image', class: 'custome-img ') %>
            </div>
            <div class="carousel-item">
              <%= image_tag('car(7).jpeg', alt: 'Your Image', class: 'custome-img ') %>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
  <div class="container">
   <div class="row">
    <div class="col-lg-4">
      <div class="card mt-5 mb-3 " style="width: 20rem;">
        <%= image_tag('car(5).jpeg', alt: 'Your Image', class: ' car-img card-img-top') %>
        <div class="card-body bg-dark text-light">
          <h5 class="card-title">Drive Now Car Rental</h5>
          <p class="card-text"></p>
          <a href="#" class="btn btn-danger">Booking</a>
        </div>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="card mt-5 mb-3 " style="width: 20rem; ">
        <%= image_tag('car(7).jpeg', alt: 'Your Image', class: ' car-img card-img-top') %>
        <div class="card-body bg-dark text-light">
          <h5 class="card-title">Drive Now Car Rental</h5>
          <p class="card-text"></p>
          <a href="#" class="btn btn-danger">Booking</a>
        </div>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="card mt-5 mb-3 " style="width: 20rem; ">
        <%= image_tag('car(6).jpeg', alt: 'Your Image', class: ' car-img card-img-top') %>
        <div class="card-body bg-dark text-light">
          <h5 class="card-title">Drive Now Car Rental</h5>
          <p class="card-text"></p>
          <a href="#" class="btn btn-danger">Booking</a>
        </div>
      </div>
    </div>
  </div>
</div>




























<style>
  body {
    background-color: black; /* or any other dark color */
    color: #ffffff; /* set the text color to contrast with the dark background */
  }

  .custome-img {
    width: 100%;
    max-height: 50em;
  }

  .car-text {
    font-size: 6em; /* Add the font-size property */
    font-weight: bold; /* Add any other styles as needed */
  }
  .car-img {
    width: 20 rem;
    max-height: 10rem;
  }

  .modal_text{
    color: black;
  }
</style>



