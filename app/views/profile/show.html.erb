<div class="container">
	<div class="col-lg-10">
		<div class="row">
			<div class="col-md-6 col-lg-6 col-sm-6">
				<h1>Your Profile</h1>
				<p><strong class="me-1">User ID :</strong> <%= @user.id %></p>
				<p><strong class="me-1">Name:</strong> <%= @user.name %></p>
				<p><strong class="me-1">Email:</strong> <%= @user.email %></p>
				<p><strong class="me-1" >Contact Number:</strong> <%= @user.contact_number %></p>
				<p><strong class="me-1">Address:</strong><%= @user.address  %></p>
			</div>
			<div class="col-md-6 col-lg-6 col-sm-6">
				<%if @user.user_image.attached? %>
					<%= image_tag @user.user_image, class: "img-fluid rounded-start", style:"width:100%; height:350px;" %> 
				<%end %>
			</div>
			<div class="col-md-6 col-lg-6 col-sm-6">
				<%= link_to "Back", root_path, class:"btn btn-outline-warning mb-3"%>
			</div>
		</div>
	</div>
</div>


