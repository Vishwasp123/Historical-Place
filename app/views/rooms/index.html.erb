<div class="col-lg-12">
	<div class="container">
    <% if @rooms.present? %>
      <%= link_to "Add room", accommodations_path, class:"btn btn-primary"%>
    
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">Title</th>
            <th scope="col">room_number</th>
            <th scope="col">contact_number</th>
            <th scope="col">check_in_date</th>
            <th scope="col"> price</th> 
          </tr>
        </thead>
        <% @rooms.each do |room| %>
          <tbody>
            <%= link_to room_path(room), style: "text-decoration:none; color:black;" do %>
              <tr>
                <td><%= room.title %></td>
                <td><%= room.room_number %></td>
                <td><%= room.contact_number %></td>
                <td><%= room.check_in_date %><span class="ms-1"><%= room.check_in_time %></span></td>
                <td><%= room.price %></td>
                <td><%= link_to "show", room, class: "btn btn-primary" %></td>
              </tr>
            <% end %>
          </tbody>
       <% end %>
      </table>
    <% end %>
  </div>
</div>