<div class="col-lg-12">
  <div class="container">
    <div class="row">
      <div class="col-lg-8">
        <small><%= simple_format @place.history %></small>
        <%#= link_to "destroy", place_path(@place) , method: :delete, data: {confirm: "Are you Sure?"} %>
      </div>
      <div class="col-lg-4 ">
        <div class="container">
          <div class="card" >
            <% if @place.images.attached? %>
            <%= image_tag @place.images[0], style:"width: 100%; height:300px;"%>

            <div class="card-body">
              <h4>Name:<span><%= @place.name %></span></h4>
              <p>State:<span><%= @place.state %></span></p>
              <p>City:<span><%= @place.district %></span></p>
              <p>longitude:<span><%= @place.longitude %></span></p>
              <p>latitude<span><%= @place.latitude %></span></p>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <h4 class="m-2">Gallery</h4>
    <div class="row">
      <% @place.images.each do |image| %>
      <% unless image == @place.images[0] %>
      <div class="col-lg-4">
        <div class="card mb-2 mt-2" >
          <%= image_tag image,  style:"width:100%; height:250px;" %>
        </div>
      </div>
      <% end %>
      <% end %> 
    </div>
    <%= link_to "Edit",edit_place_path(@place), class:"btn btn-primary mt-2" %>
    <%= link_to "Back", places_path , class:"btn btn-warning mt-2" %>
  </div>
</div>
</div>
</div>


