<div class="col-lg-12">
  <div class="container">
    <%= link_to "Back", places_path , class:"btn btn-primary mb-4 mt-0" %>
    <div class="row">
      <div class="col-lg-8">
        <h2><%= @place.name %></h2>
        <p><small><%= @place.name %></small>
          <small> <%= @place.state %></small>
          <small><%= @place.district %></small>
          <small><%= @place.latitude %></small>
          <small><%= @place.longitude %></small>
          <small><%= @place.history %></small>
          <%#= link_to "edit",edit_place_path(@place), class:"btn btn-primary" %>
          <%#= link_to "destroy", place_path(@place) , method: :delete, data: {confirm: "Are you Sure?"} %>
        </div>
        <div class="col-lg-4 ">
          <div class="container">
            <div class="card" style="width: 20rem; height: auto;">
            <%= image_tag @place.images[0] if @place.images.attached? %>
          </div>
          </div>
        </div>
      </div>
    </div>

    <div class="container">
      <h4 class="m-2">Gallery</h4>
      <div class="row">
        <% @place.images.each do |image| %>
        <div class="col-lg-4">
          <div class="card" style="width: 18rem;">
            <%= image_tag image %>
          </div>
        </div>
        <% end %> 
      </div>
    </div>
  </div>
</div>
</div>


