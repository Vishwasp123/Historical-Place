<%= form_with model: @best_time_to_visit, html: { data: { turbo: false} } do |form| %>
<div class="form-outline mb-4">
	<%= form.label :title, class:"form-label"%>
	<%= form.text_field :title, class:"form-control"%>
	<% @best_time_to_visit.errors.full_messages_for(:title).each do |message| %>
	<p class="text-danger"><%= message %></p>
	<% end %>
</div>
<div class="form-outline mb-4">
	<%= form.label :place_name, class:"form-label"%>
	<%= form.text_field :place_name, class:"form-control"%>
	<% @best_time_to_visit.errors.full_messages_for(:place_name).each do |message| %>
	<p class="card-text"><%= message %></p>
	<% end %>
</div>
<div class="form-outline mb-4">
	<%= form.label :description, class:"form-label"%>
	<%= form.text_field :description, class:"form-control" %>
	<% @best_time_to_visit.errors.full_messages_for(:description).each do |message| %>
	<p class="text-danger"><%= message%></p>
	<% end %>
</div>
<div class="d-flex">
	<%= form.submit "Submit", class:"btn btn-outline-success" %>
	<%= link_to "Back", best_time_to_visits_path, class:"btn btn-outline-warning mx-1" %>
</div>
<% end %>
