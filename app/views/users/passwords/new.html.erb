<div class="col-lg-12 my-5">
  <div class="container mx-auto my-5">
    <div class="col-md-4 mx-auto ">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><h2>Forgot your password?</h2></h5>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>
          <div class="form-outline" data-mdb-input-init>
            <%= f.label :email ,class:"form-label" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", id:"email_id", class:"form-control " %>
          </div> 
          <div class="form">
            <%= f.submit "Send me reset password instructions", class:"btn btn-primary mt-2 " %>
          </div>
          <% end %>
          <%= render "users/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>



