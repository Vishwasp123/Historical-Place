<div class="col-md-12 mx-auto my-5">
  <div class="container">
    <div class="card text-center">
      <div class="card-header">Change your password</div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="field">
          <%= f.label :password, "New password", class:"form-label" %><br />
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em><br />
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"form-control form-control-lg" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "Confirm new password", clas:"form-label" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" , class:"form-control from-control-lg%>
        </div>

        <div class="actions">
          <%= f.submit "Change my password" , class:"btn btn-outline-danger" %>
        </div>
        <% end %>
      </div>
      <div class="card-footer"><%= render "users/shared/links" %></div>
    </div>
  </div>
</div>