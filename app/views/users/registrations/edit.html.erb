<h2 class="text-center h5">Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<%= render "users/shared/error_messages", resource: resource %>
    <div class="col-md-8 col-lg-8 col-xl-8 offset-xl-1 mx-auto">
      <form>
        <div class=" flex-row align-items-center justify-content-center justify-content-lg-start">
          <div class="row">
            <div class="col-md-6">
              <div class="field mt-2">
                <%= f.label :first_name,class:"form-label" %><br />
                <%= f.text_field :first_name,class:"form-control form-control-lg", placeholder:"Enter first name" %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="field mt-2">
                <%= f.label :last_name, class:"form-label"%><br />
                <%= f.text_field :last_name,class:"form-control form-control-lg", placeholder:"Enter last name" %>
              </div>
            </div>
          </div>
          <div class="field mt-2">
            <%= f.label :contact_number,class:"form-label" %><br />
            <%= f.text_field :contact_number ,class:"form-control form-control-lg", placeholder:"Enter Contact Number"%>
          </div>
          <div class="field mt-2">
            <%= f.label :address %><br />
            <%= f.text_field :address ,class:"form-control form-control-lg", placeholder:"Enter address "%>
          </div>
          <div class="field mt-2">
            <%= f.label :email, class:"form-label" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control form-control-lg" %>
          </div>
           <div class="field my-3 justify-content-between">
              <%#= f.radio_button :role, 'user', class: 'form-check-input', id: 'flexRadioDefault1', checked: f.object.role.nil? || f.object.role == 'user' %>
              <%#= f.label :user, class: 'form-check-label', for: 'flexRadioDefault1' %> 

              <%#= f.radio_button :role, 'admin', class: 'form-check-input ms-3', id: 'flexRadioDefault2', checked: f.object.role == 'admin' %>
              <%#= f.label :admin, class: 'form-check-label', for: 'flexRadioDefault2' %> 
            </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="field mt-2">
            <%= f.label :password, class:"form-label" %> <i class="text-danger">(leave blank if you don't want to change it)</i><br />
            <%= f.password_field :password, autocomplete: "new-password" ,class:"form-control form-control-lg" %>
            <% if @minimum_password_length %>
            <br />
            <em class="text-danger"><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </div>

          <div class="field mt-2">
            <%= f.label :password_confirmation, class:"mt-2" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control form-control-lg" %>
          </div>

          <div class="field mt-2">
            <%= f.label :current_password %> <i class="text-danger">(we need your current password to confirm your changes)</i><br />
            <%= f.password_field :current_password, autocomplete: "current-password",class:"form-control form-control-lg" %>
          </div>
          <div class="field d-flex mt-3">
            <%= f.label :user_image,class:"form-label " %><br />
            <%= f.file_field :user_image ,class:"", placeholder:"Select file ", class:"form-control "%>
          </div>

          <div class="actions text-center text-lg-start mt-4 pt-2 btn-lg">
            <%= f.submit "submit", class:"btn btn-outline-success" %>
            <%= link_to "Back", root_path, class:"btn btn-outline-danger" %>
          </div>
        </div>
      </form>
  </div>
<% end %>
