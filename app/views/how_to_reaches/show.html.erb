<div class="col-lg-12 col-sm-12 col-md-12">
	<div class="container ">
			<div class="card text-center">
				<div class="card-header"><%= @how_to_reach.title %></div>
				<div class="card-body">
					<h5 class="card-title"><%= @how_to_reach.place_name%></h5>
					<p class="card-text"><%= @how_to_reach.description %></p>
					<%= link_to "Back", place_path(@how_to_reach.place_name), class: "btn btn-outline-primary" %>
					<% if current_user.admin? %>
						<%= link_to "Edit", edit_how_to_reach_path(@how_to_reach), class:"btn btn-outline-warning"%>
						<%= link_to "Delete", how_to_reach_path(@how_to_reach),
						method: :delete, data: { confirm: "Are you sure to delete" }, class:"btn btn-outline-danger"%>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>





