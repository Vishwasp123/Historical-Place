<div class="col-lg-12">
	<div class="container">
		<div class="row">
			<% if current_user.admin? %>
				<% @inquirys.each do |inquiry| %>
					<div class="col-lg-6 col-md-6 ">
						<div class="card text-center mt-2">
							<div class="card-header h2"><%= inquiry.name %></div>
							<div class="card-body">
								<h5 class="card-title"><%= inquiry.email %></h5>
								<p class="card-text"><%= inquiry.message %></p>
								<%#= link_to "Edit", edit_inquiry_path(inquiry), class:"btn btn-primary"%>
							</div>
						</div>
					</div>
				<% end %>
			<% end %>
		</div>
	</div>
</div>
</div>
