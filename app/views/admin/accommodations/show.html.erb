<div class="col-lg-12">
  <div class="justify-content-center">
    <div class="container">
      <div class="mx-auto card shadow mb-5">
        <% if @accommodation.galleries.attached? %>
          <%= image_tag @accommodation.galleries.first, style: "width: 100%; height: 350px;" %>
        <% end %>
        <div class="container">
          <div class="row">
            <div class="col-lg-6">
              <h5 class="card-title mt-3"><%= @accommodation.name %></h5>
              <p class="card-text">Contact number:<span class="ms-1"><%= @accommodation.contact_number %></span></p>
              <p class="card-text">Email:<span class="ms-1"><%= @accommodation.email %></span></p>
              <p class="card-text">City:<span class="ms-1"><%= @accommodation.city %></span></p>
              <p class="card-text">State:<span class="ms-1"><%= @accommodation.state %></span></p>
              <p class="card-text">Address:<span class="ms-1"><%= @accommodation.address %></span></p>
            </div>
            <div class="col-lg-6 my-5">
             <%= link_to "Book Room", new_admin_room_path(accommodation_id: @accommodation.id), class:"btn btn-outline-danger"%>
           </div>
           <div class="col-lg-12 mt-3">
             <p class="card-text">About:<br><small><%= @accommodation.about %></small></p>
           </div>
         </div>
       </div>
       <div class="container mt-3 mb-3" id="Gallery">
          <% if  @accommodation.galleries.present? %>
             <h4 class="card-text text-center"><i>Hotel Views</i></h4>
          <% end %>
          <div class="row">
            <% @accommodation.galleries.each do |gallery| %>
              <% unless gallery == @accommodation.galleries.first %>
                <div class="col-lg-4">
                  <div class="card my-1">
                    <% if @accommodation.galleries.attached? %>
                      <%= image_tag gallery, style: "width: 100%; height: 350px;" %>
                    <% end %>
                  </div>
                </div>
              <% end %>
            <% end %>          
            <div class="mt-2">
              <%= link_to "Edit", edit_admin_accommodation_path(@accommodation), class: "btn btn-primary" %>
              <%= link_to "Delete", admin_accommodation_path(@accommodation), method: :delete, data: { confirm: "Are you sure to delete" }, class: "btn btn-outline-danger" %>
              <%= link_to "Back", admin_places_path, class:"btn btn-outline-warning"%>
            </div>
          </div>
        </div>
     </div>
   </div>
  </div>
</div>


