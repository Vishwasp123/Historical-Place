<div class="col-lg-12">
  <div class="container mb-4">
      <%= link_to "Add Accommodations", new_admin_accommodation_path, class:"btn btn-primary"%>
    <div class="row">
      <% if @accommodations.present? %>
       <% @accommodations.each do |accommodation| %>
        <div class="col-lg-6 mt-5">
          <div class="card">
            <% if accommodation.galleries.attached? %>
              <%= image_tag accommodation.galleries.first ,class:"img-fluid", style:"height:350px;max-height:350px" %>
            <% end %>
            <div class="card-body">
              <h5 class="card-title"><%= accommodation.name %></h5>
              <p class="card-text">City: <span><%= accommodation.city %></span></p>
              <p class="card-text">State: <span><%= accommodation.state %></span></p>
              <p class="card-text">Address: <span><%= accommodation.address %></span></p>
              <p class="card-text">Pincode: <span><%= accommodation.pincode %></span></p>
              <%= link_to "View", admin_accommodation_path(accommodation), class: "btn btn-primary" %>
              <% link_to "Delete", admin_accommodation_path(accommodation), data: { turbo_method: :delete, turbo_confirm: "are you sure to delete" }, class: "btn btn-outline-primary" %>
            </div>
          </div>
        </div>
       <% end %>
       <% else %>
       <p class="lead text-danger"> No Accommodation Available </p>
      <% end %>
    </div>
    <%= paginate @accommodations %>
  </div>
</div>
