<div class="col-lg-12">
	<div class="container">
		<div class="col-lg-8 mx-auto">
			<div class="card text-center">
				<div class="card-header fs-3">
					<%= @best_time_to_visit.place_name %></div>
				<div class="card-body">
					<h5 class="card-title"><%= @best_time_to_visit.title %></h5>
					<p class="card-text"><%= @best_time_to_visit.description %></p>
					<%= link_to "Back", admin_best_time_to_visits_path, class:"btn btn-outline-dark mx-1" %>
					<% if current_user.admin? %>
						<%= link_to "Edit", edit_admin_best_time_to_visit_path, class:"btn btn-outline-warning" %>
						<%= link_to "Delete", admin_best_time_to_visit_path(@best_time_to_visit), method: :delete, data: { confirm: "are you sure to delete" }, class:"btn btn-outline-danger" %>	
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>