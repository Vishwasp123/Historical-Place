<div class="col-lg-12">
	<div class="container">
    <%  if @rooms.present? %>
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">Title</th>
            <th scope="col">room_number</th>
            <th scope="col">contact_number</th>
            <th scope="col">check_in_date</th>
            <th scope="col"> price</th> 
          </tr>
        </thead>
        <% @rooms.each do |room| %>
        <% if room.status == 'pending' %>
          <tbody>
            <%= link_to admin_room_path(room), style: "text-decoration:none; color:black;" do %>
              <tr>
                <td><%= room.title %></td>
                <td><%= room.room_number %></td>
                <td><%= room.contact_number %></td>
                <td><%= room.check_in_date %><span class="ms-1"><%= room.check_in_time %></span></td>
                <td><%= room.price %></td>
                <td><%= link_to "show", admin_room_path(room), class: "btn btn-primary" %></td>
              </tr>
              <% end %>
            <% end %>
          </tbody>
       <% end %>
      </table>
      <%= paginate @rooms %>
      <% else %>
      <p class="text-danger lead h2 text-center fs-1"> No Pending Room Details </p>
    <% end %>
  </div>
</div>