<div class="col-lg-12">
	<div class="container">
		<div class="row">
		 <% @inquiries.each do |inquiry| %>
		 <%= link_to admin_inquiry_path(inquiry) do %>
				<div class="col-lg-6 col-md-6 ">
					<div class="card text-center mt-2">
						<div class="card-header h2"><%= inquiry.name %></div>
							<div class="card-body">
								<h5 class="card-title"><%= inquiry.email %></h5>
								<p class="card-text"><%= inquiry.message %></p>
									<%= link_to "Delete", admin_inquiry_path(inquiry), method: :delete, data: { confirm: "Are you sure to delete" }, class:"btn btn-outline-danger"%>
							</div>
						</div>
					</div>
				</div>
				<% end %>
			<% end %>
		</div>
	</div>
</div>
