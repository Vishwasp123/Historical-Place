<div class="col-lg-12 mt-2">
	<div class="container">
		<div class="col-lg-8 card mx-auto">
			<div class=" text-center">
				<div class="card-header fs-2">
					Tourist Point Details 
				</div>
			</div>
			<div class="card-body">
				<div class="row">
					<div class="col-lg-6">
						<h5 class="card-title m-">Location:<span class="ms-2"><%= @tourist_point.location_name %></span></h5>
						<p class="card-text" >Place:<span class="ms-2"><%= @tourist_point.place_name %></span></p>
						<p class="card-text">Latitude:<span class="ms-2"><%= @tourist_point.latitude %></span></p>
						<p class="card-text">Longitude:<span class="ms-2"><%= @tourist_point.longitude %></span></p>
					</div>
					<div class="col-lg-6">
						<% if @tourist_point.images.attached? %>
						<%= image_tag @tourist_point.images[0], style:"width:100%; height:200px;" %>
						<% end %>
					</div>
				</div>
				<p class="card-text">History:<small class="ms-2"><%= simple_format @tourist_point.history %></small></p>
			</div>
			<div class="card-footer text-muted">
		   	<% places = @places.where(name: @tourist_point.place_name) %>
				<% if places.present? %>
 					<%= link_to "Back to Place", admin_place_path(places.first), class: "btn btn-outline-primary" %>
 					<% else %>
 					<%= link_to "Back ", admin_tourist_points_path, class: "btn btn-outline-primary" %>
				<% end %>

					<%= link_to "Edit", edit_admin_tourist_point_path, class:"btn btn-outline-warning" %>
					<%= link_to "Delete", admin_tourist_point_path(@tourist_point), method: :delete ,data:{confirm:"Are you sure "} ,class:"btn btn-outline-danger"%>
			</div>
		</div>
	</div>
</div>
