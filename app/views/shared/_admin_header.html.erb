<nav id="main-navbar" class="navbar navbar-expand-lg navbar-light bg-dark position-sticky">
  <!-- Container wrapper -->
  <div class="container-fluid ">
    <!-- Toggle button --> 
   <ul class="navbar-nav  d-flex  ">
     <!-- Notification dropdown -->
      <%= link_to "Historical Places", admin_root_path, class: "navbar-brand text-light" %>
      <li class="nav-item dropdown ">
        
         <%= form_with(url: admin_search_path, method: "get", local: true, id:"searchForm") do |form| %>
           <div class=" d-flex mb-2 ">
              <%= form.text_field :search, placeholder: "Search", class: "form-control  rounded",style:"min-width: 225px;"  %>
              <%= form.submit "Submit", class: "btn btn-outline-warning ms-2", id: "submitbutton", style: "display: none;"%>
            </div>
          <% end %> 
       
      </li>
      <div class="dropdown mt-0 mb-1 ">
        <button class="btn text-light dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
           <i class="fa-regular fa-user fa-lg "></i>
        </button>
        <% if user_signed_in? %>
          <ul class="dropdown-menu">
            <li><%= link_to "sign out", destroy_user_session_path, method: :delete, class:"ms-3"  %></li>
            <li><%= link_to current_user.email, admin_profile_path , class: 'profile-link ms-3', style:"text-decoration:none; color:black;" %></li>
          </ul>
        <% end %>
     </div>
    </ul>
  </div>
</nav>
<script type="text/javascript">
  $(document).ready(function (){
    $('#searchForm input[type="text"]').on('input',function (){
      if ($(this).val().trim() !== ''){
        $('#submitbutton').show();
      }
      else {
        $('#submitbutton').hide();
      }
    });
  });
</script>