<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
   <%= link_to "Historical Places", root_path, class: "navbar-brand" %>
   <button class="navbar-toggler" type="button" data-bs-toggle="collapse"       data-bs-target="#navbarSupportedContent" aria-controls="  navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span>
   </button>
   <div class="collapse navbar-collapse " id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-0 mt-1 mb-lg-0 ">
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle text-light " href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
           Explore
         </a>
         <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
            <li><%= link_to "Tourist Point", tourist_points_path, class: "dropdown-item" %></li>
            <li><%= link_to "New Place", new_place_path, class: "dropdown-item" %></li>
            <li><%= link_to "Nearby Place", near_by_places_path, class: "dropdown-item" %></li>
            <li><%= link_to "How to Reach", how_to_reaches_path, class: "dropdown-item" %></li>
            <li><%= link_to "Best Time to Visit", best_time_to_visits_path, class: "dropdown-item" %></li>
            <li><%= link_to "Accommodation", accommodations_path, class: "dropdown-item" %></li>
            <li><%#= link_to "Room", rooms_path, class: "dropdown-item" %></li>
            <li><%= link_to "plan your trip", plan_your_trips_path, class: "dropdown-item" %></li>
            <li><%= link_to "car rental", car_rentals_path, class: "dropdown-item" %></li>
            <li><%= link_to "Popular Place", popular_places_path, class: "dropdown-item" %></li>
         </ul>
        </li>
     </ul>
     <div class="dropdown mt-0 mb-1 ">
          <button class="btn text-light dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
           <i class="fa-regular fa-user fa-lg "></i>
         </button>
         <% if user_signed_in? %>
           <ul class="dropdown-menu">
              <li><%= link_to "sign out", destroy_user_session_path, method: :delete, class:"ms-3"  %></li>
              <li><%= link_to current_user.email, profile_path , class: 'profile-link ms-3', style:"text-decoration:none; color:black;" %></li>
            </ul>
         <% end %>
     </div>
     <%= form_with(url: search_path, method: "get", local: true, id:"searchForm") do |form| %>
        <div class=" d-flex mb-2 ">
          <%= form.text_field :search, placeholder: "Search", class: "form-control me-2"  %>
          <%= form.submit "Submit", class: "btn btn-outline-warning", id: "submitbutton", style: "display: none;"%>
       </div>
      <% end %>  
    </div>
  </div>
</nav>

<script type="text/javascript">
  $(document).ready(function (){
    $('#searchForm input[type="text"]').on('input',function (){
      if ($(this).val().trim() !== ''){
        $('#submitbutton').show();
      }
      else {
        $('#submitbutton').hide();
      }
    });
  });
</script>


