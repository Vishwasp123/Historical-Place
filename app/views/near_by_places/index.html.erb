<div class="col-lg-12">
 <%= link_to "New", new_near_by_place_path, class: "btn btn-primary mb-4 ms-4" %>
 <% @near_by_places.each do |near_by_place| %>
 <%= link_to near_by_place_path(near_by_place), style: "text-decoration:none; color:black" do %>
 <div class="card mb-3 mx-auto" style="width: 70rem; ">
    <div class="row g-0">
      <div class="col-md-4">
        <% if near_by_place.images.attached? %>
        <%= image_tag near_by_place.images.first, class: "img-fluid rounded-start", style:"width:100%; height:150px;" %>
        <% end %>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h2 class="card-title ms-3"><%= near_by_place.name %></h2>
          <h4 class="card-title ms-3"><%= near_by_place.city %></h4>
          <p class="card-text ms-3">
           <%= near_by_place.distance_from %><span><%= near_by_place.place.name %></span>
         </p>
       </div>
     </div>
   </div>
  </div>
 <% end %>
 <% end %>
</div>

